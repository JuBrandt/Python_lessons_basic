answer = input("Давайте поработаем? (Y/N)")

if answer == 'Y':
    print("Меню выбора действий:")
    print(" [1] - Перейти в папку")
    print(" [2] - Посмотреть содержимое текущей папки")
    print(" [3] - Удалить папку")
    print(" [4] - Создать папку")
    do = int(input("Укажите номер действия: "))
    if do == 1:
        print(os.getdir(), "Вы перешли в папку")
    elif do == 2:
        print(os.listdir(os.getcwd()), " Вы просматриваете содержимое текущей папки")
    elif do == 3:
        print(deldevdir(), "Вы удалили папки в текущей директории")
    elif do == 4:
        print(developdir(), "Вы вы создали папки в текущей директории")
